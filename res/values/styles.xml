<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	
    <style name="TextoAsteroides">
       <item name="android:layout_width">fill_parent</item>
       <item name="android:layout_height">wrap_content</item>
   	   <item name="android:gravity">center</item>
   	   <item name="android:textSize">25sp</item>
   	   <item name="android:layout_marginBottom">20dip</item>
    </style>
    
    <style name="TextoAsteroides.Botones">
        <item name="android:textSize">10sp</item>
    </style>
    
    <style name="TableLayoutLandAsteroidesInicio">
       <item name="android:layout_width">fill_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:gravity">center</item>
       <item name="android:stretchColumns">*</item>
    </style>
    
    <style name="LinearLayoutAsteroidesInicio">
       <item name="android:layout_width">fill_parent</item>
       <item name="android:layout_height">fill_parent</item>
       <item name="android:gravity">center</item>
       <item name="android:padding">30dip</item>
       <item name="android:orientation">vertical</item> 
    </style>
    
    <style name="TemaAsteroides" parent="android:style/Theme.NoTitleBar">
        
    </style>
    
    
</resources>